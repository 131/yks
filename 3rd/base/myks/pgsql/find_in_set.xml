<?xml version="1.0"?>
<!DOCTYPE myks PUBLIC "-//YKS//MYKS">
<myks>
  <procedure name="find_in_set" type="boolean" volatility="IMMUTABLE">
    <param name="need" type="string"/>
    <param name="list" type="string"/>
    <param name="separator" default="','::character varying" type="string"/>
    <def>
      <![CDATA[
      BEGIN
        return string_to_array(need, separator) <@ (string_to_array(list, separator));
      END;
      ]]>
    </def>
  </procedure>
  <procedure name="find_in_set" type="boolean" volatility="IMMUTABLE">
    <param name="need" type="int"/>
    <param name="list" type="string"/>
    <param name="separator" default="','::character varying" type="string"/>
    <def>
      <![CDATA[
      BEGIN
        return need::text = ANY (string_to_array(list, separator));
      END;
      ]]>
    </def>
  </procedure>
</myks>
