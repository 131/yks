<!ELEMENT table (abstract?,(fields|rule|grant|trigger)+)>
<!ELEMENT def (#PCDATA)>
<!ENTITY % table_abstraction "(materialized_view|inheritance)">

<!ATTLIST table
  name    CDATA    #REQUIRED
  extend  CDATA    #IMPLIED
  %block;
>
<!ENTITY % fk_actions "(cascade|set_null|no_action)">

<!ELEMENT fields (field+)>

<!ELEMENT field EMPTY>
<!ATTLIST field
  type	CDATA	#REQUIRED
  name	CDATA	#IMPLIED
  key   CDATA  #IMPLIED
  extra (auto_increment) #IMPLIED
  default CDATA	#IMPLIED
  update %fk_actions; 'cascade'
  delete %fk_actions; 'no_action'
  defer (defer|strict) 'defer'
>

<!-- abstract tables  -->
<!ELEMENT abstract (subscribe*,query)>
<!ATTLIST abstract
  type %table_abstraction; #IMPLIED
>

<!ELEMENT subscribe EMPTY>
<!ATTLIST subscribe
  table CDATA #REQUIRED
>
<!ELEMENT query (#PCDATA)>