<!ELEMENT table (abstract?,(fields|indices|rule|grant|trigger)+)>
<!ELEMENT def (#PCDATA)>
<!ENTITY % table_abstraction "(materialized_view|cached_logs|inheritance)">

<!ATTLIST table
  name    CDATA    #REQUIRED
  extend  CDATA    #IMPLIED
  %block;
>
<!ENTITY % fk_actions "(cascade|set_null|no_action)">


<!ELEMENT fields (field+)>
<!ELEMENT indices (index+)>


<!ELEMENT index (member+)>
<!ATTLIST index
  type	(index|unique)	'index'
  name	CDATA	#IMPLIED
>

<!ELEMENT member EMPTY>
<!ATTLIST member
 column CDATA #REQUIRED
>


<!ELEMENT field EMPTY>
<!ATTLIST field
  type	CDATA	#REQUIRED
  name	CDATA	#IMPLIED
  key   CDATA  #IMPLIED
  extra (auto_increment) #IMPLIED
  default CDATA	#IMPLIED
  %nullable;
  update %fk_actions; 'cascade'
  delete %fk_actions; 'no_action'
  defer (defer|strict) 'defer'
>

<!-- abstract tables  -->
<!ELEMENT abstract (subscribe+,query)>
<!ATTLIST abstract
  type %table_abstraction; #REQUIRED
>

<!ELEMENT subscribe EMPTY>
<!ATTLIST subscribe
  table CDATA #REQUIRED
  key   CDATA #IMPLIED
>
<!ELEMENT query (#PCDATA)>